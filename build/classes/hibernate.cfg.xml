<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD
3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://localhost/databasehotelsolutions</property>
		<property name="connection.username">root</property>   
		<property name="connection.password">root</property>
		<property name="connection.pool_size">1</property>
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="show_sql">true</property> <!-- en true muestra hql en consola-->
	
		<!--Mapeo Entidades -->
			
			<mapping resource="mapeos/Usuario.hbm.xml"/>
 			<mapping resource="mapeos/TipoDeUsuario.hbm.xml"/>
 			<mapping resource="mapeos/Habitacion.hbm.xml"/>
 			<mapping resource="mapeos/Hotel.hbm.xml"/>
 			<mapping resource="mapeos/TipoDeHabitacion.hbm.xml"/>
 			<mapping resource="mapeos/Reserva.hbm.xml"/>
 			<mapping resource="mapeos/Localidad.hbm.xml"/>
 			<mapping resource="mapeos/Partido.hbm.xml"/>
 			<mapping resource="mapeos/Provincia.hbm.xml"/>
 			
		  </session-factory>
</hibernate-configuration>